<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_weight="3"
    android:background="#403a60"
    android:elevation="3dp"
    android:paddingLeft="12dp"
    android:layout_marginBottom="200dp"
    >
    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="."
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_edittext"
        android:textColor="#55bbf4"
        android:backgroundTint="#55bbf4"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/dot"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:id="@+id/eventTitle"
            android:textColor="#fff"
            android:text="Events"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bbb"
            android:id="@+id/eventdate"

            android:text="date"
            android:textSize="18sp"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:id="@+id/eventtime"
        android:text="time"
        android:layout_toLeftOf="@+id/moveright"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:background="@drawable/circular_edittext"
        android:backgroundTint="#55bbf4"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/moveright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:maxHeight="60dp"
        android:scaleType="fitCenter"
        android:backgroundTint="#635d83"
        android:src="@drawable/arrow_right_black_24dp"
        />
</RelativeLayout>